<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stories_stories"
            android:text="Stories"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000">
        </TextView>

<!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/stories_search"-->
<!--            android:layout_toLeftOf="@+id/stories_add_btn"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:src="@drawable/ic_search"-->
<!--            android:background="@drawable/rounded_button_background">-->
<!--        </ImageButton>-->

        <ImageButton
            android:id="@+id/stories_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_add_btn"
            android:layout_alignParentEnd="true">
        </ImageButton>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateButton_FS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:text="Update"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:visibility="invisible">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/stories_rv"
        android:orientation="vertical">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>