<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="10dp"
    android:weightSum="5"
    android:orientation="vertical"
    >

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerInParent="true"-->
<!--        android:text="Stories Fragment"-->
<!--        android:textSize="30sp">-->
<!--    </TextView>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stories_stories"
            android:layout_centerVertical="true"
            android:text="Stories"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="#000000"></TextView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stories_search"
            android:layout_toLeftOf="@+id/stories_add_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_search"
            android:background="@drawable/rounded_button_background"
            ></ImageButton>

        <ImageButton
            android:id="@+id/stories_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_btn"
            android:scaleY="2"
            android:scaleX="2"
            android:background="@android:color/transparent"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"></ImageButton>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/stories_rv"
            ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>



</LinearLayout>