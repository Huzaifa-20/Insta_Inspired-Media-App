<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#818181">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Walla Habibi"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textColor="#000"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_button_AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/rounded_button_background"
            android:text="AGREE &amp; CONTINUE"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_gravity="center">
        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="By continuing, you are including that you are agree"
            android:textColor="#818181"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:id="@+id/textView_AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to the Privacy Policy and Terms of Service"
            android:textColor="#818181"
            android:layout_gravity="center">
        </TextView>


    </LinearLayout>

</RelativeLayout>