<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="1dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/image1_PPR"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <VideoView
            android:id="@+id/videoView1_PPR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="invisible">

        </VideoView>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content">
    </View>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/image2_PPR"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <VideoView
            android:id="@+id/videoView2_PPR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="invisible">

        </VideoView>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content">
    </View>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/image3_PPR"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <VideoView
            android:id="@+id/videoView3_PPR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="invisible">

        </VideoView>


    </RelativeLayout>
</LinearLayout>